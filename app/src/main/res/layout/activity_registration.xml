<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Registration"
    android:background="#D8C8F4">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="REGISTRATION"
            android:textColor="@color/purple_700"
            android:textSize="40dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Donor Name:"
            android:textColor="#E91E63"
            android:layout_marginTop="80dp"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="120dp"
            android:maxLength="30"
            android:background="@drawable/custom"
            android:textSize="25dp"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Number:"
            android:textColor="#E91E63"
            android:layout_marginTop="200dp"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/name"
            android:background="@drawable/custom"
            android:layout_marginTop="70dp"
            android:maxLength="10"
            android:textSize="25dp"
            android:drawableLeft="@drawable/ic_baseline_call_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="#E91E63"
            android:layout_marginTop="320dp"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/mobile"
            android:background="@drawable/custom"
            android:layout_marginTop="70dp"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:maxLength="40"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:text="Alternate Number:"
            android:textColor="#E91E63"
            android:textSize="30dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/altno"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/email"
            android:background="@drawable/custom"
            android:layout_marginTop="70dp"
            android:drawableLeft="@drawable/ic_baseline_call_24"
            android:maxLength="10"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:layout_marginTop="570dp"
            android:textSize="30dp"/>

        <Spinner
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/custom"
            android:layout_below="@+id/altno"
            android:layout_marginTop="70dp"
            android:entries="@array/category"
            android:hint="Category" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="690dp"
            android:text="Address:"
            android:textColor="#E91E63"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/category"
            android:layout_marginTop="70dp"
            android:background="@drawable/custom"
            android:drawableLeft="@drawable/ic_baseline_add_location_alt_24"
            android:maxLength="150"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:textColor="#E91E63"
            android:layout_marginTop="820dp"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/address"
            android:background="@drawable/custom"
            android:layout_marginTop="70dp"
            android:maxLength="10"
            android:textSize="25dp"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:textColor="#E91E63"
            android:layout_marginTop="950dp"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/username"
            android:background="@drawable/custom"
            android:layout_marginTop="70dp"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:maxLength="6"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_marginTop="20dp"
            android:inputType="textMultiLine"
            android:text="Password Requirements:\n* Should be 6 characters.\n* Can be a combination of capital letter, small letter and number."
            android:textColor="#F44336"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retype Password:"
            android:textColor="#E91E63"
            android:layout_marginTop="1180dp"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/repassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/popup"
            android:background="@drawable/custom"
            android:layout_marginTop="70dp"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:maxLength="6"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btnsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repassword"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/purple_500"
            android:text="Register"
            android:background="@drawable/custom"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:layout_below="@+id/btnsignup"
            android:text="Existing donor?"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/btnsignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom"
            android:backgroundTint="@color/purple_500"
            android:text="Login"
            android:textSize="30dp" />

    </RelativeLayout>

</ScrollView>